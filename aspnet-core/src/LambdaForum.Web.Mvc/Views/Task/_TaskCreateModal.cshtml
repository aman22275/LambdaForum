@model LambdaForum.Web.Models.Tasks.CreateTaskViewModel
@{
    Layout = null;
}

<script src="~/js/Tasks/_TaskCreateModal.js" asp-append-version="true"></script>

<div class="modal-body">
    <h2>@L("NewTask")</h2>

    <form name="TaskCreationForm" role="form" novalidate class="form-validation">
        <div class="form-group">
            <label for="Title">Title (Minimum Character should be 2)</label>
            <input type="text" name="Name" minlength="2" class="form-control" placeholder="Title" required>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" name="Description" class="form-control" placeholder="Description" required>
        </div>

        <div class="form-group">
            <label for="Due Date">Due Date</label>
            <input type="date" name="DueDate" class="form-control" placeholder="DueDate" required>
        </div>

        <div class="form-group">
            <label for="Task Type">Task Type</label>
            <select name="TaskType">
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>

            </select>
        </div>

        <div class="form-group">
            <label>Assigned Task</label>
            @Html.DropDownList(
           "AssignedPersonId",
           Model.People,
           new
           {
               @class = "form-control",
               id = "AssignedPersonCombobox"
           })
        </div>
        <button type="submit" class="btn btn-primary save-button waves-effect">@L("Save")</button>

    </form>
</div>


